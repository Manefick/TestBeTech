@model ViewStorage

<div class="bg-primary m-1 p-1 text-white"><h4>Добавление склада</h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>
<form asp-action="AddStorage" method="post">
    <div class="form-group">
        <label asp-for="Name">Введите название склада</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Введите адресс склада</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
