@model ViewProduct
<div class="bg-primary m-1 p-1 text-white"><h4>Добавление продукта </h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>

<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label asp-for="SelectedStorage">Выберите склад</label>
        <select class="form-control" asp-for="SelectedStorage"
                asp-items="@(new SelectList(Model.storages,"Id","Name"))">
        </select>
        <label asp-for="SelectedCategory">Выберите категорию</label>
        <select class="form-control" asp-for="SelectedCategory"
                asp-items="@(new SelectList(Model.categories,"Id","Name"))">
        </select>
        <label asp-for="SelectedCurrency">Выберите валюту</label>
        <select class="form-control" asp-for="SelectedCurrency"
                asp-items="@(new SelectList(Model.currencies,"Id","ShortName"))">
        </select>
        <div class="form-group">
            <label asp-for="Name">Введите название товара</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Введите цену товара</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Count">Введите количество товара</label>
            <input asp-for="Count" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
