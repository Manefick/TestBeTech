@model ViewChoiseProduct
<div class="bg-primary m-1 p-1 text-white"><h4>Изменение товара </h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>

<form asp-action="EditProduct" method="post">
    <div class="form-group">
        <label asp-for="SelectedProduct">Выберите product</label>
        <select class="form-control" asp-for="SelectedProduct"
                asp-items="@(new SelectList(Model.products,"Id","Name"))">
        </select>
        <label asp-for="SelectedCategory">Выберите категорию</label>
        <select class="form-control" asp-for="SelectedCategory"
                asp-items="@(new SelectList(Model.categories,"Id","Name"))">
        </select>
        <label asp-for="SelectedCurrency">Выберите валюту</label>
        <select class="form-control" asp-for="SelectedCurrency"
                asp-items="@(new SelectList(Model.currencies,"Id","ShortName"))">
        </select>
        <label asp-for="SelectedStorage">Выберите склад</label>
        <select class="form-control" asp-for="SelectedStorage"
                asp-items="@(new SelectList(Model.storages,"Id","Name"))">
        </select>
        <div class="form-group">
            <label asp-for="NewName">Введите название товара</label>
            <input asp-for="NewName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewPrice">Введите цену товара</label>
            <input asp-for="NewPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewCount">Введите количество товара</label>
            <input asp-for="NewCount" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Изменить</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>